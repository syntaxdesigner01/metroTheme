{
    "name": "Metro Theme Changer",
    "description": "Change any website to dark or light mode with easy",
    "version": "0.0.1",
    "author": "Syntax Designer",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content.js"
            ]
        }
    ],
    "action": {
        "default_popup":"./src/index.html",
        "default_title": "Metro Theme"
    },
    "manifest_version": 3
}